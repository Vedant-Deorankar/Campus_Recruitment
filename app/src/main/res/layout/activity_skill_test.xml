<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkillTest"
    android:background="@drawable/office1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="115dp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Select a skill"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/btnMathStats"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Mathematics and Statistics"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#B22196F3"/>

    <Button
        android:id="@+id/btnLogicalReasoning"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Logical/Abstract Reasoning"
        android:layout_below="@id/btnMathStats"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#B22196F3"/>

    <Button
        android:id="@+id/btnEnglishComprehension"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="English Comprehension and Verbal Ability"
        android:layout_below="@id/btnLogicalReasoning"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#B22196F3"/>

    <Button
        android:id="@+id/btnComputerConcepts"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Computer Concepts"
        android:layout_below="@id/btnEnglishComprehension"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#B22196F3"/>
</RelativeLayout>
